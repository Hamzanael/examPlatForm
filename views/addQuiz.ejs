        <!-- /////////////////// End menu ///////////  -->


        <!-- /////////////////// start Add ///////////  -->

        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="add">
                        <p> Add Quizs</p>
                        <!-- /////////////////// addQuiz ///////////  -->

                        <form method="post" action="/addQuiz" enctype='multipart/form-data'>
                            <label for="cars">Choose a Course:</label>
                            <select name="courseName" id="Courses">
                                <option value="computer Science">computer Science</option>
                                <option value="Software Engineering">Software Engineering</option>
                                <option value="Network Securite">Network Securite</option>
                                <option value="Computer Network">Computer Network</option>
                            </select>
                            <label for="fname">Quizes Name</label>
                            <input type="text" id="subjectName" name="name" placeholder="Name of Quiz" required>
                            <br>
                            <br>
                            <label for="fname">Quiz Time </label>
                            <input type="number" name="time" id="time" placeholder="Time in minutes" required>
                            <br>
                            <br>
                            <br>
                            <label for="mark">Quiz grade </label>
                            <input type="number" name="grade" id="mark" placeholder="Mark of Quiz" required>
                            <br>
                            <br>

                           

                            <br>


                            <label for="myfile"></label>

                            <input type="file" id="myfile" name="wordFile" accept=".docx" required><br><br>
                            <!-- <button onclick="document.getElementById('myInput').value = ''" id="add-option">Add option for Question</button> -->

                            <!-- <button onclick="document.getElementById('myInput').value = '' "id=add-img>Add option img Question</button> -->

                            <button type="submit" id="add-Quiz">Add Quiz file</button>
                        </form>
                        <br>
                        <br>
                        <br>
                        <!-- /////////////////      Start table ////////////////////////// -->


                        <h1>
                            Quizs
                        </h1>
                        <p>
                            See all detail Quizs
                        </p>
                        <main class="Qver-Flow">
                            <table >
                                <thead>
                                <tr>
                                    <th>
                                        Course
                                    </th>
                                    <th>
                                        Quiz Name
                                    </th>
                                   
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    
                                </tr>
                                </tfoot>
                                <tbody >
                                <%quizzes.forEach(function (quiz){%>
                                    <tr>
                                        <td data-title='Provider Name'>
                                            <%=quiz.courseName%>
                                        </td>
                                        <td data-title='E-mail'>
                                           <%=quiz.name%>
                                        </td>

                                    </tr>
                               <% })%>


                                </tbody>
                            </table>
                        </main>

                    </div>
                </div>
    </main>
    <!-- /////////////////// End Add ///////////  -->
    <!-- /////////////////      End table////////////////////////// -->

