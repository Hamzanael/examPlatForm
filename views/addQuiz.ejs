                            <table >
                                <thead>
                                <tr>
                                    <th>
                                        Course
                                    </th>
                                    <th>
                                        Quiz Name
                                    </th>
                                   
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>
                                    
                                </tr>
                                </tfoot>
                                <tbody >
                                <%quizzes.forEach(function (quiz){%>
                                    <tr>
                                        <td data-title='Provider Name'>
                                            <%=quiz.courseName%>
                                        </td>
                                        <td data-title='E-mail'>
                                           <%=quiz.name%>
                                        </td>

                                    </tr>
