<%- include('adminPageHaed') -%>
    <!-- css style1 link for page admin-->
    <link rel="stylesheet" href="css/style1.css"/>

    <!-- Favicons -->
    <link href="img/logo.png" rel="icon">
    <link rel="stylesheet" href="css/style.css"/>





        <div class="container">
            <div class="row">

                <div class="col-lg-12 col-md-12 col-sm-12">
                    <div class="delete">
                        <p> Delete Quizs</p>


                        <form method="POST" action="/deleteQuiz">
                            <label for="Courses">Course Name:</label>
                            <input type="text" name="courseName">
                            <label for="lname">Quiz Name </label>
                            <input type="text" id="lname" name="name" required>
                            <br>
                            <br>
                            <button type="submit">Delete Quiz</button>
                        </form>
                        <br>
                        <br><br>
                        <!-- /////////////////      start table////////////////////////// -->

                        <h1>
                            Quizs
                        </h1>
                        <p>
                            See all detail Quizs
                        </p>
                        <main class="">
                            <table>
                                <thead>
                                <tr>
                                    <th>
                                        Course
                                    </th>
                                    <th>
                                        Quizzes
                                    </th>
                                    <th> delete</th>
                                </tr>
                                </thead>
                                <tfoot>
                                <tr>

                                </tr>
                                </tfoot>
                                <tbody>
                                <% quizzes.forEach(function (quiz){ %>
                                <tr>
                                    <td data-title='Provider Name'>
                                        <%= quiz.courseName %>
                                    </td>
                                    <td data-title='E-mail'>
                                        <%= quiz.name %>
                                    </td>
                                    <td class='select'>
                                        <a class='button' href='/deleteQuiz?id=<%= quiz._id %>'>
                                            Delete
                                        </a>
                                    </td>
                                </tr>
                                <% }) %>

                                </tbody>
                            </table>
                        </main>

                    </div>
                </div>

    </main>
    <!-- /////////////////      End table////////////////////////// -->


    <!-- /////////////////// End Delete  ///////////  -->
    <script src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
    <!-- <script  src="function.js"></script> -->

</body>
</html>

