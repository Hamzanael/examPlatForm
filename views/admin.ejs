<!Doctype>
<html>
<head>
    <meta charset="UTF-8"/>
    <meta name="viewport" content="width=device-width,initial-scale=1, shrink-to-fit=no">
    <title>Admin </title>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.9/css/unicons.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700;800;900&display=swap"
          rel="stylesheet">

    <!-- css style1 link for page admin-->
    <link rel="stylesheet" href="css/style1.css"/>


    <!-- ------ ------------ -->
    <link rel="shortcut icon" type="image/x-icon" href="img/quizaylogo.png">
    <!-- *************** css link  **********-->
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">

    <link rel="stylesheet"
          href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">

    <link rel="stylesheet" href="css/owl-carousel.css">

</head>

<body>
<!-- /////////////////// start  nav-bar ///////////  -->

<input type="checkbox" name="" id="slidebar-toggle">
<div class="slidebar">
    <div class="slidebar-brand">
        <div class="brand-flex">
            <img src="img/quizayLogo.png" width="40px" alt="logo">
            <div class="brand-icon">
             

            </div>
        </div>
    </div>

    <div class="slidebar-main">
        <div class="slidebar-user">
            <span class="las la-user-circle big"></span>
            <div>
                <h3>
                    <%= admin.name%>
                </h3>
                <span>
                    <%=admin.username%>
                </span>
            </div>
        </div>
    </div>


    <div class="slidebar-menu">
        <div class="menu-head">
            <span>Dashbord</span>
            <ul>
                <li><a href="/adminPage">
                        <span ><i class="las la-home"></i> Admin page</span> </a>
                </li>
                <li><a href="/adminAddCourse">
                        <span ><i class="las la-plus"></i> Add Course</span></a>
                </li>
                <li><a href="/adminAddQuiz">
                        <span > <i class="las la-folder-plus"></i> ADD Quiz</span> </a>
                </li>
                <li><a href="/adminDeleteQuiz">
                        <span ><i class="las la-trash"></i> Delete Quiz</span></a>
                </li>

                <li><a href="/showAllUsers">
                    <span > <i class="las la-user-friends"></i> Show All Students</span></a>
            </li>
            
            <li><a href="/showFeedBack">
                <span > <i class="las la-comments"></i>  Feedback </span></a>
        </li>

           
        <li><a href="/addAdmin">
            <span > <i class="las la-user-plus"></i> New Admin </span></a>
    </li>
        

                <!-- <li><a href="">
                    <span class="las la-chart-pie"> Quiz Mark</span></a>
              </li> -->
            </ul>

        </div>

    </div>
</div>

<!-- /////////////////// End  nav-bar ///////////  -->


<!-- /////////////////// start  menu ///////////  -->


<div class="main-content">

    <header>

        <div class="menu-toggle">
            <label for="slidebar-toggle">
                <span class="las la-bars"></span>
            </label>
        </div>
        <div class="header-icon">
            <!-- <span class="las la-search"></span>
            <span class="las la-bookmark"></span>
            <span class="las la-sms"></span> -->

        </div>
    </header>

    <main id="main">
        <div class="page-header">
            <div class="center">
                <h1>Admin page</h1>
                
            </div>
            <div class="header-actions">
                  

                <a class="btn" href="/adminLogOut"> <button><span class="las la-file-export"></span>Logout</button> </a>
               

            </div>
        </div>

        <!-------------  start card  ------------->
        <div class="cards">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6"
                         data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                        <div class="card-single">
                            <a href="/adminDeleteQuiz">
                            <div class="card-flex">
                                <div class="card-info">
                                    <div class="card-head">
                                        <span>Delete Quiz</span>
                                        <br>
                                        <small>from here you can delete the Quizzes you add</small>
                                    </div>
                                   
                                </div>
                                <div class="card-chert">
                                    <!-- <span class="las la-trash-alt"></span> -->
                                    <img src="img/delete.png" width="70px" height="70px">
                                 
                                </div>
                            </div>
                        </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6"
                         data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                        <div class="card-single">
                            <a href="/adminAddQuiz">
                            <div class="card-flex">
                                <div class="card-info">
                                    
                                    <div class="card-head">
                                        <span>Add Quiz</span>
                                        <br>

                                        <small>from here you can add Sizes by using word format</small>
                                    </div>

                                
                                </div>
                               <div class="card-chert">
                                    <!-- <span class="las la-folder-plus"></span> -->
                                    <img src="img/add-file.png" width="70px" height="70px">

                                    
                                </div>

                            
                            </div>
                        </a> 
                        </div>
                    </div>


                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6"
                         data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                        <div class="card-single">
                            <a href="/adminAddCourse">
                            <div class="card-flex">
                                <div class="card-info">
                                   
                                    <div class="card-head">
                                        <span>Add New Courses</span>
                                        <br>

                                        <small>from here add a new category and major</small>
                                    </div>
                                
                                </div>
                                <div class="card-chert">
                                    <!-- <span class="las la-marker"></span> -->
                                    <img src="img/quiz1.jpg" width="70px" height="70px">

                               
                                </div>
                            </div>

                        </a>
                        </div>
                    </div>

                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6"
                         data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                        <div class="card-single">

                            <a href="/showAllUsers">
                            <div class="card-flex">
                                <div class="card-info">
                                    <div class="card-head">
                                        <span>Show all students</span>
                                        <br>

                                        <small>Show all Users and students</small>
                                    </div>
                                  
                                </div>
                                <div class="card-chert">
                                    <!-- <span class="las la-marker"></span> -->
                                    <img src="img/group.png" width="70px" height="70px">


                                </div>
                            </div>
                        </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6"
                         data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                        <div class="card-single">
                            <a href="/showFeedBack">
                            <div class="card-flex">
                                <div class="card-info">
                                    <div class="card-head">
                                        <span>Feedback and Notification</span>
                                        <br>

                                        <small>From here you can see the Feedback about Quizzes and Website</small>
                                    </div>
                                  
                                </div>
                                <div class="card-chert">
                                    <!-- <span class="las la-marker"></span> -->
                                    <img src="img/notification.png" width="70px" height="70px">


                                </div>
                            
                            </div>
                        </a>
                        </div>
                    </div>
                    <div class="col-lg-4 col-md-6 col-sm-6 col-xs-6"
                         data-scroll-reveal="enter bottom move 30px over 0.6s after 0.4s">
                        <div class="card-single">
                            <a href="/addAdmin">
                            <div class="card-flex">
                                <div class="card-info">
                                    <div class="card-head">
                                        <span>New Admin </span>
                                        <br>

                                        <small>From here you can add new Admin for your Website</small>
                                    </div>
                                    
                                </div>
                                <div class="card-chert">
                                    <!-- <span class="las la-marker"></span> -->
                                    <img src="img/add-user.png" width="70px" height="70px">


                                </div>
                            
                            </div>
                        </a>
                        </div>
                    </div>
                </div>


    </main>
    <!-------------   End card  ------------->


    <!-- jQuery -->
    <script src="js/jquery-2.1.0.min.js"></script>

    <!-- Bootstrap -->
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>

    <!-- Plugins -->
    <script src="js/owl-carousel.js"></script>
    <script src="js/scrollreveal.min.js"></script>
    <script src="js/waypoints.min.js"></script>
    <script src="js/jquery.counterup.min.js"></script>
    <script src="js/imgfix.min.js"></script>

    <!-- Global Init -->
    <script src="js/custom.js"></script>

</body>
</html>

